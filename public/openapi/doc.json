{
    "openapi": "3.0.0",
    "info": {
      "title": "French Verbs API Doc",
      "version": "1.0.0"
    },
    "tags": [
      {
        "name": "Doc",
        "description": ""
      },
      {
        "name": "Verb",
        "description": ""
      }
    ],
    "paths": {
      "/doc": {
        "get": {
          "tags": [
            "Doc"
          ],
          "responses": {
            "200": {
              "content": {
                "text/html": {
                  "schema": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "/verbs": {
        "get": {
          "tags": [
            "Verb"
          ],
          "responses": {
            "200": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/verb"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/verbs/{uuid}": {
        "get": {
          "tags": [
            "Verb"
          ],
          "parameters": [
            {
              "name": "uuid",
              "in": "path",
              "description": "",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/verb"
                  }
                }
              }
            },
            "404": {}
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "verbAuth": {
          "type": "http",
          "scheme": "bearer"
        }
      },
      "schemas": {
        "verb": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "automatiser"
            },
            "group": {
              "type": "integer",
              "enum": [
                1,
                2,
                3
              ]
            }
          }
        }
      }
    }
}